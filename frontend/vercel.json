{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "^/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_ELECTRONEUM_RPC_URL": "@electroneum_rpc_url",
    "VITE_BETTING_POOL_ADDRESS": "@betting_pool_address",
    "VITE_SPECIFIC_BET_ADDRESS": "@specific_bet_address",
    "VITE_COMMENT_HUB_ADDRESS": "@comment_hub_address"
  }
}
